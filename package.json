{
  "name": "social-network_back-end",
  "version": "1.0.0",
  "description": "",
  "main": "dist/server.js",
  "scripts": {
    "prebuild": "rm -rf dist",
    "build": "tspc -p tsconfig.build.json",
    "start": "node dist/server.js",
    "migration:run": "prisma migrate deploy",
    "migration:generate": "dotenv -e .env.development prisma migrate dev",
    "test": "cross-env NODE_ENV=test jest --passWithNoTests --runInBand --detectOpenHandles",
    "test:coverage": "cross-env NODE_ENV=test jest --passWithNoTests --runInBand --coverage --collectCoverageFrom='./src/**'",
    "test:migration:run": "dotenv -e .env.test prisma migrate deploy",
    "test:migration:generate": "dotenv -e .env.test prisma migrate dev",
    "test:watch": "cross-env NODE_ENV=test jest --watch --passWithNoTests --runInBand",
    "test:seed": "dotenv -e .env.test tsx prisma/seed.ts",
    "dev:migration:run": "dotenv -e .env.development prisma migrate deploy",
    "dev:migration:generate": "dotenv -e .env.development prisma migrate dev",
    "dev:seed": "dotenv -e .env.development tsx prisma/seed.ts",
    "dev": "cross-env NODE_ENV=development tsx watch ./src/server.ts"
  },
  "author": "Lucas Duan Rodrigues",
  "prisma": {
    "seed": "npm run dev:load-envs -- ts-node prisma/seed.ts"
  },
  "dependencies": {
    "@prisma/client": "^5.8.1",
    "bcrypt": "^5.1.1",
    "cors": "^2.8.5",
    "dayjs": "^1.11.10",
    "dotenv": "^16.3.2",
    "express": "^4.18.2",
    "http-status": "^1.7.3",
    "joi": "^17.12.0",
    "jsonwebtoken": "^9.0.2",
    "pg": "^8.11.3",
    "tsx": "^4.7.0"
  },
  "devDependencies": {
    "@faker-js/faker": "^8.3.1",
    "@types/bcrypt": "^5.0.2",
    "@types/express": "^4.17.21",
    "@types/jest": "^29.5.11",
    "@types/jsonwebtoken": "^9.0.5",
    "@types/node": "^20.11.5",
    "@types/supertest": "^6.0.2",
    "cross-env": "^7.0.3",
    "dotenv-cli": "^7.3.0",
    "jest": "^29.7.0",
    "nodemon": "^3.0.3",
    "prisma": "^5.8.1",
    "supertest": "^6.3.4",
    "ts-jest": "^29.1.2",
    "ts-node": "^10.9.2",
    "ts-patch": "^3.1.2",
    "tsc-alias": "^1.8.8",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.3.3"
  }
}
